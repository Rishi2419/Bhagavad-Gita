<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F4CABA"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.fragments.SplashFragment">
    <ImageView
        android:id="@+id/ivChakra"
        android:layout_width="@dimen/_130sdp"
        android:layout_height="@dimen/_130sdp"
        android:src="@drawable/splash"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:id="@+id/llBhagwatGita"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:gravity="center"
        android:padding="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/kalash" />

        <TextView
            android:id="@+id/tvChapterNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:text="Shree Bhagavat Gita"
            android:textColor="@color/orange"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/kalash" />
    </LinearLayout>






</LinearLayout>